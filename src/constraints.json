/**
 * each top level object defines constraints for its positioning:
 *
 * "self":     on same grid cell.
 *             whitelist: FORBIDS anything but "empty" by default.
 * "adjacent": on any adjacent grid cells.
 *             blacklist: ALLOWS anything by default.
 *
 * "<object>": -1   FORBIDS      <object>
 * "<object>":  1   REQUIRES     <object>
 * "<object>":  2   REQUIRES ALL <object>s with value 2 [NOT IMPLEMENTED YET]
 */

{
  "greenarea": {
    "self": {},
    "adjacent": {}
  },
  "tree": {
    "self": {
      "greenarea":  1,
      "empty":     -1
    },
    "adjacent": {}
  },
  "bench" : {
    "self": {
      "greenarea": 1,
      "footpath":  1
    },
    "adjacent": {}
  },
  "footpath" : {
    "self": {},
    "adjacent": {
      "footpath": 1,
      "street":   1,
      "street2":  1
    }
  },
  "parkingarea" : {
    "self": {},
    "adjacent": {
      "street":  1,
      "street2": 1
    }
  },
  "privatebuilding" : {
    "self": {},
    "adjacent": {
      "footpath": 1,
      "street":   1,
      "street2":  1
    }
  },
  "publicbuilding" : {
    "self": {},
    "adjacent": {
      "footpath": 1,
      "street":   1,
      "street2":  1
    }
  },
  "store" : {
    "self": {},
    "adjacent": {
      "street":   1,
      "street2":  1
    }
  },
  "store2" : {
    "self": {},
    "adjacent": {
      "street":   1,
      "street2":  1
    }
  },
  "street" : {
    "self": {},
    "adjacent": {}
  },
  "street2" : {
    "self": {},
    "adjacent": {}
  }
}
